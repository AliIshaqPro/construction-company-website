<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Q&Q Builders LTD</title>
    <style>
    /* Base styles for the navbar */
    .custom-navbar {
        position: fixed; /* Make navbar fixed */
        top: 0; /* Stick to the top */
        width: 100%;
        height: 70px; /* Default height */
        background-color: rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(5px);
        display: flex;
        justify-content: space-between; /* Spread logo and nav items */
        align-items: center; /* Vertically align items */
        color: white;
        z-index: 999; /* Ensure it's on top of other elements */
        border-top: 2px solid #2C2D3F; /* Border at the top */
        padding: 10px 20px; /* Padding for better spacing */
        transition: height 0.3s ease;
    }
    
    /* Style for navbar links */
    .custom-navbar a {
        color: #2C2D3F;
        text-decoration: none;
        font-size: 1.2vw;
        padding: 10px; /* Adjust padding for better touch targets */
        border: 2px solid transparent;
        transition: all 0.3s ease;
        border-radius: 40px;
        background-color: rgba(255, 255, 255, 0.6);
    }
    
    /* Hover effect */
    .custom-navbar a:hover {
        border-color: white;
        background-color: rgba(255, 255, 255, 0.4);
        color: white;
        transform: scale(1.1);
    }
/* Logo styles */
.custom-logo {
    flex-shrink: 0; /* Prevent shrinking */
    width: 200px; /* Fixed width for logo */
}

/* Container for the nav items */
.nav-items {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-grow: 1; /* Nav items take up remaining space */
    gap: 20px; /* Spacing between nav items */
}

/* Layout adjustment for larger screens */
@media (min-width: 992px) {
    .custom-navbar {
        height: 130px;
        padding: 0 50px;
    }

    .custom-logo {
        width: 250px; /* Increase logo size for larger screens */
    }

    .nav-items a {
        font-size: 1.2vw; /* Adjust font size for larger screens */
    }
}

/* Adjust layout for smaller screens */
@media (max-width: 768px) {
    .custom-navbar {
        height: auto; /* Auto height for smaller screens */
        flex-direction: column; /* Stack items vertically */
        padding: 10px;
    }

    .custom-logo {
        margin-bottom: 5px;
        width: 300px; /* Reduce logo size on mobile screens */
    }

    .nav-items {
        flex-direction: row; /* Keep nav items in a horizontal row */
        font-size: 2.5vw; /* Adjust size for small screens */
        justify-content: center; /* Center the nav items */
        gap: 10px; /* Space between nav items */
    }

    .custom-navbar a {
        font-size: 3.5vw; /* Increase font size for smaller screens */
        padding: 8px; /* Adjust padding for touch targets */
        min-height: 40px; /* Maintain a minimum height for nav items */
        display: flex; /* Use flex for vertical alignment */
        align-items: center; /* Center items vertically */
    }
}

/* Additional media queries for even smaller screens */
@media (max-width: 480px) {
    .custom-navbar a {
        font-size: 3vw; /* Adjust font size for smaller screens */
        padding: 5px; /* Reduce padding */
    }

    .nav-items {
        gap: 5px; /* Slightly reduce gap */
    }
}

/* Fine-tune layout for tablet-sized screens */
@media (min-width: 768px) and (max-width: 992px) {
    .custom-logo {
        width: 180px; /* Adjust logo size for tablets */
    }

    .nav-items a {
        font-size: 0.5vw; /* Adjust font size for tablets */
    }
}

/* Hide dropdown menu by default */
.dropdown-menu {
    display: none;
    position: absolute;
    background-color: white;
    list-style: none;
    border: 1px solid #ccc;
    z-index: 100;
    width: 300px;
}

/* Show the dropdown menu on hover */
.dropdown:hover .dropdown-menu {
    display: block;
}

/* Dropdown styling */
.dropdown-menu li {
    padding: 5px 0;
}

/* Adjust link style within the dropdown */
.dropdown-menu li a {
    text-decoration: none;
    color: #000;
}


    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg custom-navbar">
    <!-- Logo -->
    <div class="custom-logo" style="display:flex; border-radius:40px;">
        <a href="/">
            <%= image_tag 'logo2.png', class: 'img-fluid custom-logo-img', style: 'height:100px;width:300px;' %>
        </a>
    </div>

    <!-- Navigation Items -->
    <div class="nav-items">
        
        <a href="#about">About</a>
        <div class="dropdown">
            <a href="#" class="dropdown-toggle">Projects</a>
            <ul class="dropdown-menu">
                <li><a href="#projects">On-Going Projects</a></li>
                <li><a href="#projects">Finished Projects</a></li>
            </ul>
        </div>
        <a href="#services">Services</a>

        <!-- Dropdown for Calculator -->
        <div class="dropdown">
            <a href="#" class="dropdown-toggle">Calculator</a>
            <ul class="dropdown-menu">
                <li><a href="/tiles-calculator">Tiles Calculator</a></li>
                <li><a href="/concrete-calculator">Concrete Calculator</a></li>
                <li><a href="/bricks-calculator">Bricks Calculator</a></li>
                <li><a href="/paint-calculator">Paint Calculator</a></li>
                <li><a href="/hardcore-calculator">Hardcore Calculator</a></li>
                <li><a href="/loft-insulation-calculator">Loft Insulation</a></li>
            </ul>
        </div>

        <a href="#contact">Contact</a>
    </div>
</nav>
    <!-- JavaScript for Scroll and Popup -->
    <script>
        window.onscroll = function() { updateProgressBar() };

        function updateProgressBar() {
            var winScroll = document.body.scrollTop || document.documentElement.scrollTop;
            var height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            var scrolled = (winScroll / height) * 100;
            document.getElementById("progress-bar").style.width = scrolled + "%";
        }

        function openPopup(event) {
            event.preventDefault(); 
            document.getElementById('calculatorPopup').style.display = 'block';
            document.getElementById('overlay').style.display = 'block';
        }

        function closePopup() {
            document.getElementById('calculatorPopup').style.display = 'none';
            document.getElementById('overlay').style.display = 'none';
        }
    </script>

</body>
</html>
