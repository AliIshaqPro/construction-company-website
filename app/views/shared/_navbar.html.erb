        width: 180px; /* Adjust logo size for tablets */
    }

    .nav-items a {
        font-size: 0.5vw; /* Adjust font size for tablets */
    }
}
/* Hide dropdown menu by default */
.dropdown-menu {
    display: none;
    position: absolute;
    background-color: #1a76d1; /* Set background color to orange */
    list-style: none;
    border: 1px solid #ccc;
    z-index: 100;
    width: 250px;
    max-height: 200px; /* Set a maximum height */
    overflow-y: auto; /* Enable vertical scrolling if content exceeds max-height */
    padding: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Add a subtle shadow for depth */
    border-radius: 10px;
    transition: transform 1s ease, opacity 0.5s ease; /* Smooth transition for dropdown */
    transform: translateY(-20px); /* Initially above the view */
    opacity: 0; /* Initially hidden */
    left: -75px; /* Move dropdown 10px to the left */
}


/* Show the dropdown with animation when active */
.dropdown.active .dropdown-menu {
    display: block;
    transform: translateY(0);
    opacity: 1;
    animation: dropdownSlide 0.5s ease forwards;
}

/* Prevent dropdown from overflowing screen */
.dropdown-menu {
    max-width: 90vw; /* Ensure the dropdown doesn't exceed viewport width */
    max-height: 90vh; /* Prevent height overflow */
    overflow-y: auto; /* Add vertical scroll if content exceeds height */
}

/* Other styles remain the same */


/* Dropdown styling */
.dropdown-menu li {
    padding: 10px 0;
    transition: transform 0.3s ease-in-out; /* Smooth effect on hover */
}

/* Adjust link style within the dropdown */
.dropdown-menu li a {
    text-decoration: none;
    color: white;
    font-size: 1.1em;
    font-weight: bold;
    padding: 10px 15px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 5px;
    display: block;
    transition: background-color 0.3s ease, transform 0.3s ease;
}

/* Hover effect for dropdown items */
.dropdown-menu li a:hover {
    background-color: rgba(255, 255, 255, 0.3);
    transform: scale(1.05);
}

/* Show the dropdown with animation when active */
.dropdown.active .dropdown-menu {
    display: block;
    transform: translateY(0); /* Slide it down smoothly */
    opacity: 1; /* Make it visible */
}

/* Animation for dropdown appearance */
@keyframes dropdownSlide {
    from {
        transform: translateY(-20px); /* Start above the view */
        opacity: 0; /* Start invisible */
    }
    to {
        transform: translateY(0); /* Slide into view */
        opacity: 1; /* Fully visible */
    }
}

/* Apply the animation to the dropdown when active */
.dropdown.active .dropdown-menu {
    animation: dropdownSlide 0.5s ease forwards;
}


