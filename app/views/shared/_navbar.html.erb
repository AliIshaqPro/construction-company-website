<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Q&Q Builders LTD</title>
    <style>
    /* Base styles for the navbar */
    .custom-navbar {
        position: fixed;
        left: 0;
        width: 100%;
        height: 70px; /* Default height */
        background-color: rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(5px);
        display: flex;
        justify-content: space-between; /* Spread logo and nav items */
        align-items: center; /* Vertically align items */
        color: white;
        z-index: 999;
        border-top: 2px solid #2C2D3F; /* Border at the top */
        padding: 10px 20px; /* Padding for better spacing */
        transition: height 0.3s ease;
    }

    /* Style for navbar links */
    .custom-navbar a {
        color: #2C2D3F;
        text-decoration: none;
        font-size: 1.2vw;
        padding: 10px; /* Adjust padding for better touch targets */
        border: 2px solid transparent;
        transition: all 0.3s ease;
        border-radius: 40px;
        background-color: rgba(255, 255, 255, 0.6);
    }

    /* Hover effect */
    .custom-navbar a:hover {
        border-color: white;
        background-color: rgba(255, 255, 255, 0.4);
        color: white;
        transform: scale(1.1);
    }

    /* Logo styles */
    .custom-logo {
        flex-shrink: 0; /* Prevent shrinking */
        width: 200px; /* Fixed width for logo */
    }

    .custom-logo-img {
        width: 100%; /* Make logo responsive */
        height: auto; /* Maintain aspect ratio */
    }

    /* Container for the nav items */
    .nav-items {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-grow: 1; /* Nav items take up remaining space */
        gap: 20px; /* Spacing between nav items */
    }

    /* Layout adjustment for larger screens */
    @media (min-width: 992px) {
        .custom-navbar {
            height: 120px;
            padding: 0 50px;
        }

        .custom-logo {
            width: 250px; /* Increase logo size for larger screens */
        }

        .nav-items a {
            font-size: 1.2vw; /* Adjust font size for larger screens */
        }
    }

    /* Adjust layout for smaller screens */
    @media (max-width: 768px) {
        .custom-navbar {
            height: auto;
            flex-direction: column;
            padding: 20px;
        }

        .custom-logo {
            margin-bottom: 10px;
            width: 160px; /* Reduce logo size on mobile screens */
        }

        .nav-items {
            flex-direction: row; /* Keep nav items in a horizontal row */
            font-size: 3.5vw; /* Adjust size for small screens */
            justify-content: center; /* Center the nav items */
            gap: 1px; /* Space between nav items */
        }

        .custom-navbar a {
            font-size: 4vw; /* Increase font size for smaller screens */
            padding: 8px; /* Adjust padding for touch targets */
        }
    }

    /* Additional media queries for even smaller screens */
    @media (max-width: 480px) {
        .custom-logo {
            width: 120px; /* Further reduce logo size on small devices */
        }

        .custom-navbar a {
            font-size: 3vw; /* Adjust font size for smaller screens */
            padding: 5px; /* Reduce padding */
        }

        .nav-items {
            gap: 3px; /* Slightly reduce gap */
        }
    }

    /* Fine-tune layout for tablet-sized screens */
    @media (min-width: 768px) and (max-width: 992px) {
        .custom-logo {
            width: 180px; /* Adjust logo size for tablets */
        }

        .nav-items a {
            font-size: 0.5vw; /* Adjust font size for tablets */
        }
    }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg custom-navbar">
        <!-- Logo -->
        <div class="custom-logo" style="display:flex;border-radius:40px;">
            <a href="/">
                <%= image_tag 'logo2.png', class: 'img-fluid custom-logo-img' %>
            </a>
        </div>

        <!-- Navigation Items -->
        <div class="nav-items">
            <a href="#about">About</a>
            <a href="#projects">Projects</a>
            <a href="#services">Services</a>
            <a href="/ourwork">Gallery</a>
            <a href="#contact">Contact</a>
        </div>
    </nav>

    <!-- Progress Bar and Calculator Section -->
    <ul class="pro-features">
        <a class="get-pro" style="margin-top:100px;" href="#">Calculator</a>
        <div class="button">
            <a href="/tiles-calculator" class="btn">Tiles Calculator</a>
            <a href="/concrete-calculator" class="btn">Concrete Calculator</a>
            <a href="/bricks-calculator" class="btn">Bricks Calculator</a>
            <a href="/paint-calculator" class="btn">Paint Calculator</a>
            <a href="/hardcore-calculator" class="btn">Hardcore Calculator</a>
            <a href="/loft-insulation-calculator" class="btn">Loft Insulation Calculator</a>
        </div>
    </ul>

    <!-- JavaScript for Scroll and Popup -->
    <script>
        window.onscroll = function() { updateProgressBar() };

        function updateProgressBar() {
            var winScroll = document.body.scrollTop || document.documentElement.scrollTop;
            var height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
            var scrolled = (winScroll / height) * 100;
            document.getElementById("progress-bar").style.width = scrolled + "%";
        }

        function openPopup(event) {
            event.preventDefault(); 
            document.getElementById('calculatorPopup').style.display = 'block';
            document.getElementById('overlay').style.display = 'block';
        }

        function closePopup() {
            document.getElementById('calculatorPopup').style.display = 'none';
            document.getElementById('overlay').style.display = 'none';
        }
    </script>

</body>
</html>
