<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tile Calculator</title>
    <style>
@media (min-width: 992px) {
.content-section{
margin-top:93px;
}
}	</style>
    <style>
      

        .calculator {
            
            background-color: #ffffff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
            width: 100%;
            
        }

        h2 {
            font-size: 1.8rem;
            margin-bottom: 15px;
            color: #333;
            text-align: center;
        }

        h3 {
            font-size: 1.2rem;
            margin-bottom: 10px;
            color: #555;
            text-align: center;
        }

        label {
            font-size: 1rem;
            color: #666;
            margin-bottom: 5px;
            display: block;
        }

        input, select {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border: 1px solid #ddd;
            border-radius: 6px;
            font-size: 1rem;
            margin-bottom: 15px;
        }

        input:focus, select:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.2);
        }

        button {
            width: 100%;
            padding: 12px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 20px;
        }

        button:hover {
            background-color: #0056b3;
        }

        #popup {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0, 0, 0, 0.5);
            display: none;
            justify-content: center;
            align-items: center;
        }

        #popup-content {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
            text-align: center;
            width: 100%;
            max-width: 320px;
        }

        #popup-result {
            font-size: 1.2rem;
            margin-bottom: 20px;
        }

        #popup button {
            padding: 10px 15px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1rem;
        }

        #popup button:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
<div class="box" style="margin-top:150px;">
    <div class="calculator">
        <h2>Tile Calculator</h2>

        <!-- Room Dimensions -->
        <label for="length">Length (metres):</label>
        <input type="number" id="length" value="1" step="0.01">

        <label for="width">Height or Width (metres):</label>
        <input type="number" id="width" value="1" step="0.01">

        <!-- Tile Preset -->
        <h3>Tiles</h3>
        <label for="tilePreset">Tile Preset:</label>
        <select id="tilePreset" onchange="setTileDimensions()">
            <option value="100x100">100 x 100 mm</option>
            <option value="200x200">200 x 200 mm</option>
            <option value="300x300">300 x 300 mm</option>
            <option value="custom">Custom</option>
        </select>

        <!-- Tile Dimensions -->
        <label for="tileLength">Tile Length (mm):</label>
        <input type="number" id="tileLength" value="100">

        <label for="tileWidth">Tile Width (mm):</label>
        <input type="number" id="tileWidth" value="100">

        <!-- Doors/Windows Aperture -->
        <h3>Doors/Windows Aperture</h3>
        <label for="apertureArea">Aperture Area (sq m):</label>
        <input type="number" id="apertureArea" value="0" step="0.01">

        <!-- Waste Percentage -->
        <label for="waste">Waste (%):</label>
        <input type="number" id="waste" value="1">

        <!-- Calculate Button -->
        <button onclick="calculateTiles()">Calculate</button>
    </div>

    <!-- Popup -->
    <div id="popup">
        <div id="popup-content">
            <p id="popup-result"></p>
            <button onclick="closePopup()">Close</button>
        </div>
    </div>
</div>
    <script>
        function setTileDimensions() {
            const tilePreset = document.getElementById('tilePreset').value;
            if (tilePreset !== "custom") {
                const dimensions = tilePreset.split('x');
                document.getElementById('tileLength').value = dimensions[0];
                document.getElementById('tileWidth').value = dimensions[1];
                document.getElementById('tileLength').disabled = true;
                document.getElementById('tileWidth').disabled = true;
            } else {
                document.getElementById('tileLength').disabled = false;
                document.getElementById('tileWidth').disabled = false;
            }
        }

        function calculateTiles() {
            const length = parseFloat(document.getElementById('length').value);
            const width = parseFloat(document.getElementById('width').value);
            const tileLength = parseFloat(document.getElementById('tileLength').value) / 1000; // Convert to meters
            const tileWidth = parseFloat(document.getElementById('tileWidth').value) / 1000; // Convert to meters
            const apertureArea = parseFloat(document.getElementById('apertureArea').value);
            const waste = parseFloat(document.getElementById('waste').value) / 100;

            if (length && width && tileLength && tileWidth !== 0) {
                const roomArea = length * width - apertureArea;
                const tileArea = tileLength * tileWidth;
                const numberOfTiles = Math.ceil((roomArea / tileArea) * (1 + waste));

                showPopup(`You need approximately ${numberOfTiles} tiles.`);
            } else {
                showPopup('Please enter valid values.');
            }
        }

        function showPopup(message) {
            document.getElementById('popup-result').innerText = message;
            document.getElementById('popup').style.display = 'flex';
        }

        function closePopup() {
            document.getElementById('popup').style.display = 'none';
        }
    </script>
</body>
</html>
