<body>
<% content_for :show_navbar do %>
    <!-- Skip the navbar -->
<% end %>
<a href="/" class="home-link">
    <span>Home</span>
</a>

<div class="link-container">
    
    <a href="/concrete-calculator" class="link-item">Concrete Calculator</a>
    <a href="/bricks-calculator" class="link-item">Bricks Calculator</a>
    <a href="/paint-calculator" class="link-item">Paint Calculator</a>
    <a href="/hardcore-calculator" class="link-item">Hardcore Calculator</a>
    <a href="/loft-insulation-calculator" class="link-item">Loft Insulation</a>
</div>

<div class="box" style="margin-top:180px;">
    <div class="calculator">
        <h2>Tile Area Calculator</h2>

        <!-- Wall Dimensions -->
        <h3>Wall Dimensions</h3>
        <label for="height">Wall Height (metres):</label>
        <input type="number" id="height" value="1" step="0.01">

        <label for="width1">Wall 1 Width (metres):</label>
        <input type="number" id="width1" value="1" step="0.01">

        <label for="width2">Wall 2 Width (metres):</label>
        <input type="number" id="width2" value="1" step="0.01">

        <label for="width3">Wall 3 Width (metres):</label>
        <input type="number" id="width3" value="1" step="0.01">

        <label for="width4">Wall 4 Width (metres):</label>
        <input type="number" id="width4" value="1" step="0.01">

        <!-- Floor Dimensions -->
        <h3>Floor Dimensions</h3>
        <label for="floor-length">Floor Length (metres):</label>
        <input type="number" id="floor-length" value="1" step="0.01">

        <label for="floor-width">Floor Width (metres):</label>
        <input type="number" id="floor-width" value="1" step="0.01">

        <!-- Calculate Button -->
        <button onclick="calculateArea()">Calculate</button>
    </div>

    <!-- Popup -->
    <div id="popup">
        <div id="popup-content">
            <p id="popup-result"></p>
            <button onclick="closePopup()">Close</button>
        </div>
    </div>
</div>

<script>
    function calculateArea() {
        const height = parseFloat(document.getElementById('height').value);
        const width1 = parseFloat(document.getElementById('width1').value);
        const width2 = parseFloat(document.getElementById('width2').value);
        const width3 = parseFloat(document.getElementById('width3').value);
        const width4 = parseFloat(document.getElementById('width4').value);
        const floorLength = parseFloat(document.getElementById('floor-length').value);
        const floorWidth = parseFloat(document.getElementById('floor-width').value);

        // Error handling for empty or invalid inputs
        if (isNaN(height) || isNaN(width1) || isNaN(width2) || isNaN(width3) || isNaN(width4) || isNaN(floorLength) || isNaN(floorWidth)) {
            showPopup('Please enter valid dimensions for all fields.');
            return;
        }

        // Calculate total wall area by summing the areas of all four walls
        const wallArea = (height * width1) + (height * width2) + (height * width3) + (height * width4);

        // Calculate floor area
        const floorArea = floorLength * floorWidth;

        // Total area
        const totalArea = wallArea + floorArea;

        showPopup(`Total area to cover is approximately ${totalArea.toFixed(2)} square meters.`);
    }

    function showPopup(message) {
        document.getElementById('popup-result').innerText = message;
        document.getElementById('popup').style.display = 'flex';
    }

    function closePopup() {
        document.getElementById('popup').style.display = 'none';
    }
</script>


</body>
