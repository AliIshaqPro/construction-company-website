         <!-- Start portfolio -->
         <section class="portfolio section">
            <div class="container">
               <div class="row">
                  <div class="col-lg-12">
                     <div class="section-title">
                        <h2>Our Completed Construction Projects</h2>
                        <%= image_tag 'section-img.png' %>
                        <p>Explore our diverse portfolio showcasing high-quality construction projects that demonstrate our commitment to excellence and craftsmanship.</p>
                     </div>
                  </div>
               </div>
            </div>
            <div class="container-fluid">
               <div class="row">
                  <% if @projects.present? %>
                  <% @projects.each do |project| %>
                  <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                     <div class="card">
                        <% if project.image.attached? %>
                        <%= image_tag project.image, alt: 'Project Image', class: 'card-img-top', style: 'width: 100%; height: 300px; object-fit: contain;' %>
                        <% else %>
                        <%= image_tag 'slider2.jpg', alt: 'Default Image', class: 'card-img-top', style: 'width: 100%; height: 300px; object-fit: contain;' %> <!-- Fallback image -->
                        <% end %>
                        <div class="card-body text-center">
                           <h5 class="card-title"><%= project.title %></h5>
                           <%= link_to 'View Details', admin_project_path(project), class: 'btn btn-primary' %>
                        </div>
                     </div>
                  </div>
                  <% end %>
                  <% else %>
                  <p>No projects available.</p>
                  <% end %>
               </div>
            </div>
         </section>
         <!--/ End portfolio -->
 
  








