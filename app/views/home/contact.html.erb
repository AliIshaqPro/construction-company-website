         <section class="appointment">
            <div class="container" style="padding:30px;">
               <div class="row">
                  <div class="col-lg-12">
                     <div class="section-title">
                        <h2>We Are Always Ready to Assist You. Schedule a Consultation</h2>
                        <%= image_tag 'section-img.png' %>
                        <p>Contact us today to discuss your construction project and receive expert advice from our team.</p>
                     </div>
                  </div>
               </div>
               <div class="row">
                  <div class=" col-lg-6 col-md-12 col-12">
                  <%= form_with(model: @consultation_request, local: true) do |form| %>
                     <div class="row">
                       <!-- Name Field -->
                       <div class="col-lg-6 col-md-6 col-12">
                         <div class="form-group">
                           <%= form.label :name, 'Name', class: 'form-label' %>
                           <%= form.text_field :name, placeholder: 'Your Name', class: 'form-control' %>
                           <% if @consultation_request.errors[:name].any? %>
                             <div class="text-danger"><%= @consultation_request.errors[:name].first %></div>
                           <% end %>
                         </div>
                       </div>
                   
                       <!-- Email Field -->
                       <div class="col-lg-6 col-md-6 col-12">
                         <div class="form-group">
                           <%= form.label :email, 'Email', class: 'form-label' %>
                           <%= form.email_field :email, placeholder: 'Your Email', class: 'form-control' %>
                           <% if @consultation_request.errors[:email].any? %>
                             <div class="text-danger"><%= @consultation_request.errors[:email].first %></div>
                           <% end %>
                         </div>
                       </div>
                   
                       <!-- Phone Field -->
                       <div class="col-lg-6 col-md-6 col-12">
                         <div class="form-group">
                           <%= form.label :phone, 'Phone Number', class: 'form-label' %>
                           <%= form.text_field :phone, placeholder: 'Your Phone Number', class: 'form-control' %>
                           <% if @consultation_request.errors[:phone].any? %>
                             <div class="text-danger"><%= @consultation_request.errors[:phone].first %></div>
                           <% end %>
                         </div>
                       </div>
                   
                       <!-- Project Type Field -->
                       <div class="col-lg-6 col-md-6 col-12">
                         <div class="form-group">
                           <%= form.label :project_type, 'Project Type', class: 'form-label' %>
                           <%= form.select :project_type, options_for_select([['Select Project Type', ''], ['Renovation', 'Renovation'], ['New Construction', 'New Construction'], ['Remodeling', 'Remodeling'], ['Demolition', 'Demolition'], ['Interior Design', 'Interior Design']]), class: 'form-control' %>

                           <% if @consultation_request.errors[:project_type].any? %>
                             <div class="text-danger"><%= @consultation_request.errors[:project_type].first %></div>
                           <% end %>
                         </div>
                       </div>
                   
                       <!-- Message Field -->
                       <div class="col-lg-12 col-md-12 col-12">
                         <div class="form-group">
                           <%= form.label :message, 'Message', class: 'form-label' %>
                           <%= form.text_area :message, placeholder: 'Describe Your Project...', class: 'form-control' %>
                           <% if @consultation_request.errors[:message].any? %>
                             <div class="text-danger"><%= @consultation_request.errors[:message].first %></div>
                           <% end %>
                         </div>
                       </div>
                     </div>
                   
                     <!-- Submit Button -->
                     <div class="row">
                       <div class="col-lg-5 col-md-4 col-12">
                         <div class="form-group">
                           <div class="button">
                             <%= form.submit 'Schedule Consultation', class: 'btn btn-primary' %>
                           </div>
                         </div>
                       </div>
                       <div class="col-lg-7 col-md-8 col-12">
                         <p>( We will confirm your appointment via phone or email )</p>
                       </div>
                     </div>
                   <% end %>
                   
                  </div>
                  <div class="col-lg-6 col-md-12">
                     <div class="appointment-image">
                        <%= image_tag 'blog4.jpg', style: 'width: 100%; height: 445px; object-fit: cover;' %>
                     </div>
                  </div>
               </div>
            </div>
         </section>
         <!-- End Appointment -->
         <!-- End Appointment -->
         <!-- Start Newsletter Area -->
         <section class="newsletter section">
            <div class="container">
               <div class="row ">
                  <div class="col-lg-6 col-12">
                     <!-- Start Newsletter Text -->
                     <div class="subscribe-text">
                        <h6>Stay Updated with the Latest Construction Trends</h6>
                        <p>Sign up to receive updates on our latest projects, industry news, and special offers directly to your inbox.</p>
                     </div>
                     <!-- End Newsletter Text -->
                  </div>
                  <div class="col-lg-6 col-12">
                     <!-- Start Newsletter Form -->
                     <div class="subscribe-form">
                        <%= form_with(model: Subscription.new, url: newsletters_path, local: true, class: 'newsletter-inner') do |form| %>
                        <%= form.email_field :email, placeholder: 'Your email address', class: 'common-input', required: true, onfocus: "this.placeholder = ''", onblur: "this.placeholder = 'Your email address'" %>
                        <%= form.submit 'Subscribe', class: 'btn' %>
                        <% end %>
                     </div>
                     <!-- End Newsletter Form -->
                  </div>
               </div>
            </div>
         </section>