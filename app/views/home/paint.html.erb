         background-color: blue;
         padding: 30px;
         color:white;
         border-radius: 12px;
         box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
         width: 100%;
         background: rgba(255, 255, 255, 0.1);
         backdrop-filter: blur(10px);
         padding: 30px;
         border-radius: 10px;
         box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
         }
         h2 {
         font-size: 1.8rem;
         margin-bottom: 15px;
         color: white;
         text-align: center;
         }
         label {
         font-size: 1rem;
         color: white;
         margin-bottom: 5px;
         display: block;
         }
         input {
         width: 100%;
         padding: 10px;
         margin-top: 5px;
         border: 1px solid #ddd;
         border-radius: 6px;
         font-size: 1rem;
         margin-bottom: 15px;
         }
         input:focus {
         border-color: #007bff;
         outline: none;
         box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.2);
         }
         button {
         width: 100%;
         padding: 12px;
         background-color: blue;
         color: white;
         border: none;
         border-radius: 6px;
         font-size: 1rem;
         cursor: pointer;
         transition: background-color 0.3s ease;
         margin-top: 20px;
         }
         button:hover {
         background-color: #0056b3;
         }
         #popup {
         position: fixed;
         top: 0;
         left: 0;
         width: 100vw;
         height: 100vh;
         background: rgba(0, 0, 0, 0.5);
         display: none;
         justify-content: center;
         align-items: center;
         }
         #popup-content {
         background-color: white;
         padding: 20px;
         border-radius: 10px;
         box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
         text-align: center;
         width: 100%;
         max-width: 320px;
         }
         #popup-result {
         font-size: 1.2rem;
         margin-bottom: 20px;
         }
         #popup button {
         padding: 10px 15px;
         background-color: #28a745;
         color: white;
         border: none;
         border-radius: 6px;
         cursor: pointer;
         font-size: 1rem;
         }
         #popup button:hover {
         background-color: #218838;
         }
         .home-link {
         display: flex;
         align-items: center;
         justify-content: center;
         text-decoration: none;
         font-weight: bold;
         height: 50px;
         width: 100%;
         background-color: black;
         border-radius: 20px;
         color: white;
         margin-bottom: 20px; /* Adds space below the Home link */
         }
         .link-container {
         display: flex;
         justify-content: space-between; /* Space between links */
         flex-wrap: wrap; /* Allows wrapping to new lines on smaller screens */
         }
         .link-item {
         flex: 1; /* Each link takes equal space */
         text-align: center;
         margin: 5px; /* Space around links */
         padding: 10px; /* Padding inside links */
         background-color: black; /* Link background color */
         color: white; /* Link text color */
         border-radius: 10px; /* Rounded corners */
         text-decoration: none; /* No underline */
         transition: background-color 0.3s; /* Smooth background change */
         }
         .link-item:hover {
         background-color: gray; /* Change background on hover */
         }
         /* Media Queries for responsiveness */
         @media (max-width: 768px) {
         .link-item {
         flex: 1 1 45%; /* Two links per row on medium screens */
         }
         }
         @media (max-width: 480px) {
         .link-item {
         flex: 1 1 100%; /* Full width for each link on small screens */
         }
         }
      </style>
</head>
<body>
<% content_for :show_footer do %>
    <!-- Skip the footer -->
<% end %>
<% content_for :show_navbar do %>
    <!-- Skip the navbar -->
<% end %>
<a href="/" class="home-link">
    <span>Home</span>
</a>

<div class="link-container">
    <a href="/tiles-calculator" class="link-item">Tiles Calculator</a>
    <a href="/concrete-calculator" class="link-item">Concrete Calculator</a>
    <a href="/bricks-calculator" class="link-item">Bricks Calculator</a>
    
    <a href="/hardcore-calculator" class="link-item">Hardcore Calculator</a>
    <a href="/loft-insulation-calculator" class="link-item">Loft Insulation</a>
</div>

<div class="box" style="margin-top: 15px; margin-bottom: 20px;">
    <div class="calculator">
        <h2 style="color: white;">Paint Calculator</h2>
        <div class="input-group">
            <label for="height">Room Wall Height (metres):</label>
            <input type="number" id="height" step="0.1" placeholder="Enter height (e.g., 3.0)" required>
        </div>
        <div class="input-group">
            <label for="length">Total Length of Walls (metres):</label>
            <input type="number" id="length" step="0.1" placeholder="Enter length (e.g., 10.0)" required>
        </div>
        <div class="input-group">
            <label>Type of Paint:</label>
            <div class="radio-group">
                <input type="radio" id="liquidGloss" name="paintType" value="Liquid Gloss" class="btn-radio">
                <label for="liquidGloss" class="btn btn-primary">Liquid Gloss</label>

                <input type="radio" id="emulsion" name="paintType" value="Emulsion" class="btn-radio">
                <label for="emulsion" class="btn btn-primary">Emulsion</label>
            </div>
        </div>
        <div class="input-group">
            <label>Number of Coats:</label>
            <div class="radio-group">
                <input type="radio" id="oneCoat" name="coats" value="1" class="btn-radio">
                <label for="oneCoat" class="btn btn-primary">1</label>

                <input type="radio" id="twoCoats" name="coats" value="2" class="btn-radio">
                <label for="twoCoats" class="btn btn-primary">2</label>

                <input type="radio" id="threeCoats" name="coats" value="3" class="btn-radio">
                <label for="threeCoats" class="btn btn-primary">3</label>
            </div>
        </div>
        <div class="input-group">
            <label for="aperture">Doors/Windows Aperture (sq m):</label>
            <input type="number" id="aperture" step="0.1" placeholder="Enter aperture (e.g., 2.0)" required>
        </div>
        <button class="calculate-btn" onclick="calculatePaint()">Calculate</button>
    </div>

    <!-- Popup for result -->
    <div class="popup" id="resultPopup">
        <h3>Result</h3>
        <p id="resultText"></p>
        <button class="close-popup" onclick="closePopup()">Close</button>
    </div>
    <div class="overlay" id="overlay"></div>
</div>

<style>
    .radio-group {
        display: flex;
        gap: 10px;
        margin-bottom: 10px;
    }

    .btn-radio {
        display: none;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-radio:checked + .btn {
        background-color: black; /* Darker blue for selected button */
    }

    .btn-radio:focus + .btn {
        outline: none;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }
</style>

<script>
    function calculatePaint() {
        const height = parseFloat(document.getElementById('height').value);
        const length = parseFloat(document.getElementById('length').value);
        const coats = document.querySelector('input[name="coats"]:checked') ? parseFloat(document.querySelector('input[name="coats"]:checked').value) : 0;
        const aperture = parseFloat(document.getElementById('aperture').value);

        console.log('Height:', height);
        console.log('Length:', length);
        console.log('Coats:', coats);
        console.log('Aperture:', aperture);

        if (isNaN(height) || isNaN(length) || isNaN(coats) || height <= 0 || length <= 0 || coats <= 0) {
            alert('Please enter valid values');
            return;
        }

        // Assuming 1 litre of paint covers 10 sq m with 1 coat
        const wallArea = (height * length) - aperture; // Total wall area excluding windows/doors
        const totalPaint = (wallArea * coats) / 10; // Litres of paint needed

        console.log('Total Paint Required:', totalPaint); // Check if the calculation is correct
        document.getElementById('resultText').innerHTML = `Paint required (litres): ${totalPaint.toFixed(2)}`;

        openPopup();
    }

    function openPopup() {
        document.getElementById('resultPopup').style.display = 'block';
        document.getElementById('overlay').style.display = 'block';
    }

    function closePopup() {
        document.getElementById('resultPopup').style.display = 'none';
        document.getElementById('overlay').style.display = 'none';
    }
</script>

</body>


</html>
