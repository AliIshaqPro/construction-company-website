<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paint Calculator</title>
    <style>
@media (min-width: 992px) {
.content-section{
margin-top:93px;
}
}	</style>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #eef2f7;
            padding: 20px;
        }
        .calculator {
            max-width: 500px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }
        .calculator h2 {
            text-align: center;
            color: #333;
        }
        .input-group {
            margin-bottom: 15px;
        }
        .input-group label {
            display: block;
            margin-bottom: 5px;
            color: #555;
        }
        .input-group input, .input-group select {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .calculate-btn {
            width: 100%;
            padding: 12px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
        }
        .calculate-btn:hover {
            background-color: #218838;
        }
        /* Popup */
        .popup {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
            display: none;
            z-index: 9999;
            border-radius: 10px;
        }
        .popup h3 {
            margin-bottom: 15px;
        }
        .close-popup {
            background-color: #dc3545;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
            border-radius: 4px;
        }
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 9998;
            display: none;
        }
    </style>
</head>
<body>
<div class="box" style="margin-top:150px;">
<div class="calculator">
    <h2>Paint Calculator</h2>
    <div class="input-group">
        <label for="height">Room Wall Height (metres):</label>
        <select id="height">
            <option value="2.5">2.5</option>
            <option value="3">3</option>
            <option value="3.5">3.5</option>
            <option value="4">4</option>
        </select>
    </div>
    <div class="input-group">
        <label for="length">Total Length of Walls (metres):</label>
        <select id="length">
            <option value="10">10</option>
            <option value="15">15</option>
            <option value="20">20</option>
            <option value="25">25</option>
        </select>
    </div>
    <div class="input-group">
        <label for="paintType">Type of Paint:</label>
        <select id="paintType">
            <option value="Liquid Gloss">Liquid Gloss</option>
            <option value="Emulsion">Emulsion</option>
        </select>
    </div>
    <div class="input-group">
        <label for="coats">Number of Coats:</label>
        <select id="coats">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
        </select>
    </div>
    <div class="input-group">
        <label for="aperture">Doors/Windows Aperture (sq m):</label>
        <select id="aperture">
            <option value="0">0</option>
            <option value="2">2</option>
            <option value="4">4</option>
        </select>
    </div>
    <button class="calculate-btn" onclick="calculatePaint()">Calculate</button>
</div>

<!-- Popup for result -->
<div class="popup" id="resultPopup">
    <h3>Result</h3>
    <p id="resultText"></p>
    <button class="close-popup" onclick="closePopup()">Close</button>
</div>
<div class="overlay" id="overlay"></div>
</div>
<script>

function calculatePaint() {
    const height = parseFloat(document.getElementById('height').value);
    const length = parseFloat(document.getElementById('length').value);
    const coats = parseFloat(document.getElementById('coats').value);
    const aperture = parseFloat(document.getElementById('aperture').value);

    console.log('Height:', height);
    console.log('Length:', length);
    console.log('Coats:', coats);
    console.log('Aperture:', aperture);

    if (isNaN(height) || isNaN(length) || isNaN(coats) || height <= 0 || length <= 0 || coats <= 0) {
        alert('Please enter valid values');
        return;
    }

    // Assuming 1 litre of paint covers 10 sq m with 1 coat
    const wallArea = (height * length) - aperture; // Total wall area excluding windows/doors
    const totalPaint = (wallArea * coats) / 10; // Litres of paint needed

    console.log('Total Paint Required:', totalPaint); // Check if the calculation is correct
    document.getElementById('resultText').innerHTML = `Paint required (litres): ${totalPaint.toFixed(2)}`;

    openPopup();
}

    function openPopup() {
        document.getElementById('resultPopup').style.display = 'block';
        document.getElementById('overlay').style.display = 'block';
    }

    function closePopup() {
        document.getElementById('resultPopup').style.display = 'none';
        document.getElementById('overlay').style.display = 'none';
    }
</script>

</body>
</html>
