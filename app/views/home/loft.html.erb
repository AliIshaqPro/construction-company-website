<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loft Insulation Calculator</title>
    <style>
        @media (min-width: 992px) {
            .content-section {
                margin-top: 93px;
            }
        }
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
        }
        .calculator {
            width: 100%;
            
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border-radius: 8px;
        }
        .calculator h2 {
            text-align: center;
        }
        .input-group {
            margin-bottom: 15px;
        }
        .input-group label {
            display: block;
            margin-bottom: 5px;
        }
        .input-group select, .input-group input {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }
        .calculate-btn {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 16px;
        }
        .calculate-btn:hover {
            background-color: #0056b3;
        }
        .popup {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
            display: none;
            z-index: 9999;
            border-radius: 10px;
            max-width: 300px;
            text-align: center;
        }
        .popup h3 {
            margin-bottom: 15px;
        }
        .close-popup {
            background-color: #dc3545;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
        }
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 9998;
            display: none;
        }
        .error {
            color: red;
            font-size: 14px;
            text-align: center;
            margin-top: 10px;
        }
        .home-link {
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            font-weight: bold;
            height: 50px;
            width: 100%;
            background-color: black;
            border-radius: 20px;
            color: white;
            margin-bottom: 20px; /* Adds space below the Home link */
        }
        
        .link-container {
            display: flex;
            justify-content: space-between; /* Space between links */
            flex-wrap: wrap; /* Allows wrapping to new lines on smaller screens */
        }
        
        .link-item {
            flex: 1; /* Each link takes equal space */
            text-align: center;
            margin: 5px; /* Space around links */
            padding: 10px; /* Padding inside links */
            background-color: black; /* Link background color */
            color: white; /* Link text color */
            border-radius: 10px; /* Rounded corners */
            text-decoration: none; /* No underline */
            transition: background-color 0.3s; /* Smooth background change */
        }
        
        .link-item:hover {
            background-color: gray; /* Change background on hover */
        }
        
        /* Media Queries for responsiveness */
        @media (max-width: 768px) {
            .link-item {
                flex: 1 1 45%; /* Two links per row on medium screens */
            }
        }
        
        @media (max-width: 480px) {
            .link-item {
                flex: 1 1 100%; /* Full width for each link on small screens */
            }
        }
        body {
            background-image: url('https://images.unsplash.com/photo-1518216049389-a6ce1f175e59?q=80&w=1400&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
            background-size: cover; /* Ensures the image covers the entire element */
            background-position: center; /* Centers the image */
            background-repeat: no-repeat; /* Prevents the image from repeating */
            height: 100vh; /* Full height of the viewport */
            margin: 0; /* Removes default margin */
        }
    </style>
</head>
<body>
<% content_for :show_navbar do %>
    <!-- Skip the navbar -->
  <% end %>
<a href="/" class="home-link">
    <span>Home</span>
</a>

<div class="link-container">
    <a href="/tiles-calculator" class="link-item">Tiles Calculator</a>
    <a href="/concrete-calculator" class="link-item">Concrete Calculator</a>
    <a href="/bricks-calculator" class="link-item">Bricks Calculator</a>
    <a href="/paint-calculator" class="link-item">Paint Calculator</a>
    <a href="/hardcore-calculator" class="link-item">Hardcore Calculator</a>
    
</div>


<div class="box" style="margin-top: 150px;margin-bottom:20px;">
    <div class="calculator">
        <h2>Loft Insulation Calculator</h2>

        <div class="input-group">
            <label for="width">Width (metres):</label>
            <input type="number" id="width" placeholder="Enter width in metres" required>
        </div>

        <div class="input-group">
            <label for="height">Height (metres):</label>
            <input type="number" id="height" placeholder="Enter height in metres" required>
        </div>

        <div class="input-group">
            <label for="length">Roll Length (mm):</label>
            <input type="number" id="length" placeholder="Enter roll length in mm" required>
        </div>

        <div class="input-group">
            <label for="rollWidth">Roll Width (mm):</label>
            <input type="number" id="rollWidth" placeholder="Enter roll width in mm" required>
        </div>

        <button class="calculate-btn" onclick="calculateInsulation()">Calculate</button>
        <div id="error-message" class="error"></div>
    </div>

    <div class="popup" id="resultPopup" role="dialog" aria-labelledby="popupTitle" aria-hidden="true">
        <h3 id="popupTitle">Result</h3>
        <p id="resultText"></p>
        <button class="close-popup" onclick="closePopup()">Close</button>
    </div>
    <div class="overlay" id="overlay"></div>
</div>
<script>
    function calculateInsulation() {
        const width = parseFloat(document.getElementById('width').value);
        const height = parseFloat(document.getElementById('height').value);
        const rollLength = parseFloat(document.getElementById('length').value) / 1000; // convert mm to metres
        const rollWidth = parseFloat(document.getElementById('rollWidth').value) / 1000; // convert mm to metres
        const errorMessage = document.getElementById('error-message');

        // Reset error message
        errorMessage.textContent = "";

        if (isNaN(width) || isNaN(height) || isNaN(rollLength) || isNaN(rollWidth) || width <= 0 || height <= 0 || rollLength <= 0 || rollWidth <= 0) {
            errorMessage.textContent = 'Please enter valid positive values for all fields.';
            return;
        }

        // Calculate the area to be insulated
        const area = width * height;

        // Calculate the area covered by one roll of insulation
        const rollArea = rollLength * rollWidth;

        // Calculate the number of rolls required
        const rollsRequired = Math.ceil(area / rollArea);

        document.getElementById('resultText').innerHTML = `
            Area to Insulate (sq m): ${area.toFixed(2)}<br>
            Rolls of insulation needed: ${rollsRequired}
        `;

        openPopup();
    }

    function openPopup() {
        document.getElementById('resultPopup').style.display = 'block';
        document.getElementById('overlay').style.display = 'block';
        document.getElementById('resultPopup').setAttribute("aria-hidden", "false");
    }

    function closePopup() {
        document.getElementById('resultPopup').style.display = 'none';
        document.getElementById('overlay').style.display = 'none';
        document.getElementById('resultPopup').setAttribute("aria-hidden", "true");
    }
</script>
</body>
</html>
