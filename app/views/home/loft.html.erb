<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loft Insulation Calculator</title>
    <style>
@media (min-width: 992px) {
.content-section{
margin-top:93px;
}
}	</style>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
        }
        .calculator {
            width: 100%;
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border-radius: 8px;
        }
        .calculator h2 {
            text-align: center;
        }
        .input-group {
            margin-bottom: 15px;
        }
        .input-group label {
            display: block;
            margin-bottom: 5px;
        }
        .input-group select, .input-group input {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }
        .calculate-btn {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
            font-size: 16px;
        }
        .calculate-btn:hover {
            background-color: #0056b3;
        }
        .popup {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
            display: none;
            z-index: 9999;
            border-radius: 10px;
            max-width: 300px;
            text-align: center;
        }
        .popup h3 {
            margin-bottom: 15px;
        }
        .close-popup {
            background-color: #dc3545;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
        }
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 9998;
            display: none;
        }
        .error {
            color: red;
            font-size: 14px;
            text-align: center;
            margin-top: 10px;
        }
    </style>
</head>
<body>
<div class="box" style="margin-top:150px;">
<div class="calculator">
    <h2>Loft Insulation Calculator</h2>

    <div class="input-group">
        <label for="width">Width (metres):</label>
        <select id="width" onchange="toggleCustomInput('width')">
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="custom">Custom</option>
        </select>
        <input type="number" id="customWidth" placeholder="Enter custom width" style="display:none;">
    </div>

    <div class="input-group">
        <label for="height">Height (metres):</label>
        <select id="height" onchange="toggleCustomInput('height')">
            <option value="2.5">2.5</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="custom">Custom</option>
        </select>
        <input type="number" id="customHeight" placeholder="Enter custom height" style="display:none;">
    </div>

    <div class="input-group">
        <label for="length">Roll Length (mm):</label>
        <select id="length" onchange="toggleCustomInput('length')">
            <option value="4000">4000 mm</option>
            <option value="6000">6000 mm</option>
            <option value="8000">8000 mm</option>
            <option value="custom">Custom</option>
        </select>
        <input type="number" id="customLength" placeholder="Enter custom length (mm)" style="display:none;">
    </div>

    <div class="input-group">
        <label for="rollWidth">Roll Width (mm):</label>
        <select id="rollWidth" onchange="toggleCustomInput('rollWidth')">
            <option value="400">400 mm</option>
            <option value="600">600 mm</option>
            <option value="800">800 mm</option>
            <option value="custom">Custom</option>
        </select>
        <input type="number" id="customRollWidth" placeholder="Enter custom width (mm)" style="display:none;">
    </div>

    <button class="calculate-btn" onclick="calculateInsulation()">Calculate</button>
    <div id="error-message" class="error"></div>
</div>

<div class="popup" id="resultPopup" role="dialog" aria-labelledby="popupTitle" aria-hidden="true">
    <h3 id="popupTitle">Result</h3>
    <p id="resultText"></p>
    <button class="close-popup" onclick="closePopup()">Close</button>
</div>
<div class="overlay" id="overlay"></div>
</div>
<script>
    function toggleCustomInput(field) {
        const selectElement = document.getElementById(field);
        const customInput = document.getElementById('custom' + field.charAt(0).toUpperCase() + field.slice(1));
        if (selectElement.value === 'custom') {
            customInput.style.display = 'block';
        } else {
            customInput.style.display = 'none';
        }
    }

    function calculateInsulation() {
        const width = getFinalValue('width');
        const height = getFinalValue('height');
        const rollLength = getFinalValue('length') / 1000; // convert mm to metres
        const rollWidth = getFinalValue('rollWidth') / 1000; // convert mm to metres
        const errorMessage = document.getElementById('error-message');

        // Reset error message
        errorMessage.textContent = "";

        if (isNaN(width) || isNaN(height) || isNaN(rollLength) || isNaN(rollWidth) || width <= 0 || height <= 0 || rollLength <= 0 || rollWidth <= 0) {
            errorMessage.textContent = 'Please enter valid positive values for all fields.';
            return;
        }

        // Calculate the area to be insulated
        const area = width * height;

        // Calculate the area covered by one roll of insulation
        const rollArea = rollLength * rollWidth;

        // Calculate the number of rolls required
        const rollsRequired = Math.ceil(area / rollArea);

        document.getElementById('resultText').innerHTML = `
            Area to Insulate (sq m): ${area.toFixed(2)}<br>
            Rolls of insulation needed: ${rollsRequired}
        `;

        openPopup();
    }

    function getFinalValue(field) {
        const selectElement = document.getElementById(field);
        const customInput = document.getElementById('custom' + field.charAt(0).toUpperCase() + field.slice(1));
        return selectElement.value === 'custom' ? parseFloat(customInput.value) : parseFloat(selectElement.value);
    }

    function openPopup() {
        document.getElementById('resultPopup').style.display = 'block';
        document.getElementById('overlay').style.display = 'block';
        document.getElementById('resultPopup').setAttribute("aria-hidden", "false");
    }

    function closePopup() {
        document.getElementById('resultPopup').style.display = 'none';
        document.getElementById('overlay').style.display = 'none';
        document.getElementById('resultPopup').setAttribute("aria-hidden", "true");
    }
</script>

</body>
</html>
