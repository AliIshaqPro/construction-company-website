<!-- Start Clients -->
<div class="clients overlay">
   <div class="container">
      <div class="row">
         <div class="col-lg-12 col-md-12 col-12">
            <center style="padding:20px;">
               <h1>Clients</h1>
            </center>
            <div class="row">
               <!-- Display Clients -->
               <% @clients.each do |client| %>
               <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                  <div class="card">
                     <% if client.image.attached? %>
                     <%= image_tag client.image, style: 'width: 100%; height: 200px; object-fit: cover;', class: 'card-img-top' %>
                     <% else %>
                     <%= image_tag 'logo.png', style: 'width: 100%; height: 200px; object-fit: cover;', class: 'card-img-top' %>
                     <% end %>
                     <div class="card-body text-center">
                        <h5 class="card-title"><%= client.name %></h5>
                        <p><strong>Company:</strong> <%= client.company %></p>
                        <!-- Display company -->
                        <p><strong>Joined:</strong> <%= client.created_at.strftime("%B %d, %Y") %></p>
                        <!-- Display joined date -->
                        <%= link_to 'View Details', admin_client_path(client), class: 'btn btn-primary' %> <!-- Link to client details -->
                     </div>
                  </div>
               </div>
               <% end %>
            </div>
         </div>
      </div>
   </div>
</div>
