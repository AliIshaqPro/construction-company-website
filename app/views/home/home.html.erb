    <button class="close-btn" onclick="closeModal()">Ã—</button>
    <img id="modalImage" src="" alt="Full Screen Image">
</div>
<script>
    const scrollingWrapper = document.getElementById('scrollingWrapper');
    let isAutoScrolling = true;
    let autoScrollInterval;
    let scrollAmount = 0;
    const scrollSpeed = 1; // Adjust this to change auto scroll speed
    const modal = document.getElementById('imageModal');
    const modalImage = document.getElementById('modalImage');

    // Function for auto-scrolling
    function startAutoScroll() {
        isAutoScrolling = true;
        autoScrollInterval = setInterval(() => {
            if (isAutoScrolling) {
                scrollAmount -= scrollSpeed;
                scrollingWrapper.style.transform = `translateX(${scrollAmount}px)`;
            }
        }, 30); // Lower interval for smoother scrolling
    }

    function stopAutoScroll() {
        isAutoScrolling = false;
        clearInterval(autoScrollInterval);
    }

    // Start auto-scrolling on page load
    startAutoScroll();

    // Detect swipe events for mobile
    let startX;
    scrollingWrapper.addEventListener('touchstart', (e) => {
        startX = e.touches[0].clientX;
        stopAutoScroll();
    });

    scrollingWrapper.addEventListener('touchmove', (e) => {
        const touch = e.touches[0];
        const diff = startX - touch.clientX;
        scrollAmount -= diff;
        scrollingWrapper.style.transform = `translateX(${scrollAmount}px)`;
        startX = touch.clientX;
    });

    // Enable keyboard navigation for desktop
    document.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft' || e.key === 'ArrowRight') {
            stopAutoScroll();
            scrollAmount += e.key === 'ArrowLeft' ? 20 : -20;
            scrollingWrapper.style.transform = `translateX(${scrollAmount}px)`;
        }
    });

    // Full-Screen Modal Functionality
    document.querySelectorAll('.scrolling-image').forEach(img => {
        img.addEventListener('click', () => {
            stopAutoScroll(); // Stop auto-scroll when modal opens
            modal.style.display = 'flex';
            modalImage.src = img.src;
        });
    });

    // Close Modal
    function closeModal() {
        modal.style.display = 'none';
        modal.classList.remove('zoomed');
        setTimeout(startAutoScroll, 3000); // Resume auto-scrolling after a delay
    }

    // Zoom Functionality on Image Click
    modalImage.addEventListener('click', () => {
        modal.classList.toggle('zoomed');
    });

    // Attach closeModal to the close button
    document.querySelector('.close-btn').addEventListener('click', closeModal);
</script>




















   

