<h1><%= action_name.capitalize %> FAQ</h1>

<%= form_with(model: [:admin, @faq], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :question %>
    <%= form.text_field :question, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :answer %>
    <%= form.text_area :answer, class: 'form-control' %>
  </div>

  <%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>
