<div class="box" style="margin-top:150px; padding: 20px;">
  <p class="text-success mb-4"><%= notice %></p> <!-- Styled notice message with margin-bottom -->

  <% content_for :title, "Projects" %>

  <h1 class="mb-4 text-center">Projects</h1> <!-- Centered header with margin-bottom -->

  <div id="projects" class="row">
    <% @projects.each do |project| %>
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-body p-4"> <!-- Added padding to card body for better spacing -->
            <h2 class="card-title mb-3"><%= project.title %></h2> <!-- Title with margin-bottom -->

            <p class="card-text mb-3"><strong>Description:</strong> <%= project.description %></p> <!-- Added margin-bottom -->

            <p class="mb-3"><strong>Image:</strong></p> <!-- Added margin-bottom to the "Image" label -->

            <% if project.image.attached? %> <!-- Check if an image is attached -->
              <%= image_tag project.image, class: "img-fluid mb-3", alt: "#{project.title} Image" %> <!-- Image with margin-bottom -->
            <% else %>
              <p class="text-muted mb-3">No image available</p> <!-- Message when no image is attached with margin-bottom -->
            <% end %>

            <div class="d-flex justify-content-between"> <!-- Flex container for buttons -->
              <%= link_to "Show this project", admin_project_path(project), class: "btn btn-primary btn-sm me-2" %>
              <%= button_to 'Destroy', admin_project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "New project", new_admin_project_path, class: 'btn btn-success mt-4' %> <!-- Styled new project button -->
</div>
