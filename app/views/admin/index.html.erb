<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel</title>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  <!-- Include Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f4f6f9;
    }

    .admin-profile img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      object-fit: cover;
    }

    h1 {
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <% content_for :show_navbar do %>
    <!-- Skip the navbar -->
  <% end %>
  
  <% content_for :show_footer do %>
    <!-- Skip the footer -->
  <% end %>
  
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Admin Panel</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <%= link_to 'Manage Projects', admin_projects_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Manage Clients', admin_clients_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Manage Feedbacks', admin_feedbacks_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Consultation Requests', admin_consultation_requests_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Manage FAQs', admin_faqs_path, class: 'nav-link' %> 
          </li>
          <li class="nav-item">
            <%= link_to 'Manage Sliders', sliders_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= button_to 'Log Out', destroy_admin_session_path, method: :delete, class: 'btn btn-danger ms-2' %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Profile Section -->
  <div class="container mt-4">
    <div class="d-flex justify-content-center mb-4">
      <div class="text-center">
        <%= image_tag 'logo.png', alt: 'Admin Image', class: 'img-fluid admin-profile' %>
        <h4 class="mt-2">Shahid Bilal</h4>
        <p class="text-muted">Administrator</p>
      </div>
    </div>

    <!-- Main Content -->
    <div class="row">
      <!-- Consultation Requests -->
      <div class="col-12 mb-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      Consultation Requests
    </div>
    <div class="card-body">
      <!-- Use the table-responsive class for responsiveness -->
      <div class="table-responsive">
        <table class="table table-hover table-bordered w-100">
          <thead class="table-light">
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Project Type</th>
              <th>Consultant</th>
              <th>Preferred Date</th>
              <th>Message</th>
              <th>Created At</th>
            </tr>
          </thead>
          <tbody>
            <% if @consultation_requests.present? %>
              <% @consultation_requests.each do |request| %>
                <tr>
                  <td><%= request.name %></td>
                  <td><%= request.email %></td>
                  <td><%= request.phone %></td>
                  <td><%= request.project_type %></td>
                  <td><%= request.consultant %></td>
                  <td><%= request.preferred_date %></td>
                  <td><%= request.message %></td>
                  <td><%= request.created_at.strftime("%B %d, %Y") %></td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="8" class="text-center">No consultation requests found.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


<!-- Subscription Requests -->
<div class="col-12">
  <div class="card">
    <div class="card-header bg-primary text-white">
      Subscription Requests
    </div>
    <div class="card-body">
      <!-- Add table-responsive for responsiveness -->
      <div class="table-responsive">
        <table class="table table-hover table-bordered w-100">
          <thead class="table-light">
            <tr>
              <th>ID</th>
              <th>Email Address</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @subscriptions.each do |subscription| %>
              <tr>
                <td><%= subscription.id %></td>
                <td><%= subscription.email %></td>
                <td>
                  <%= link_to 'Delete', admin_subscription_path(subscription), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
